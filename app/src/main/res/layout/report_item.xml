<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent"
    android:layout_weight="100dp">

<com.google.android.material.card.MaterialCardView
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="15dp"
    android:background="@color/grey_light">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Media -->
        <ImageView
            android:layout_width="135dp"
            android:layout_height="135dp"
            app:srcCompat="@drawable/dzik"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginLeft="15dp">

            <!-- Title, secondary and supporting text -->
            <TextView
                android:id="@+id/zgloszenie_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="ZgÅ‚oszenie"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/data_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="10.10.2020 12:30"
                android:textSize="18dp"

                />

            <TextView
                android:id="@+id/item_wojewodztwo_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Kujawsko-pomorskie"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/item_powiat_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="bydgoski"
                android:textSize="16dp" />

        </LinearLayout>



    </LinearLayout>